<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html id="checkout" lang="{{ locale }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}" />
    <title>{{ shop.name }} - {{ page_title }}</title>
    {% assign template = 'checkout' %}
    {{ content_for_header }}
    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    {{ checkout_stylesheets }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ checkout_scripts }}
    {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
    {% include 'google-analytics' %}
  </head>
  <body>

    <header class="header">
      <div class="header__wrapper">
        <h1 class="helpers--visually-hidden">Sello</h1>
        <img class="header__image" src="{{ 'logo-light.png' | asset_url }}" alt="Sello">
      </div>
    </header>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="sidebar">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {% comment %} hiding breadcrumbs completely until we add a cart page
            {{ breadcrumb }}
            {% endcomment %}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
